<form id = "password-form" action = "/edit/updatePassword" method="POST" enctype = "application/x-www-form-urlencoded">
    <fieldset>
        <legend>Password must be atleast 8 characters.</legend>
        <label>
            Password:
            <input class = "text-input" type="password" name="password" placeholder="Password" maxlength="128" required="true">
        </label>
        <label>
            Confirm Password:
        <input class = "text-input" type="password" name="confirmPassword" placeholder="Confirm Password" maxlength="128" required="true">
        </label>
    </fieldset>
    <input type = "submit" value = "submit" class = "submit-button">
</form>